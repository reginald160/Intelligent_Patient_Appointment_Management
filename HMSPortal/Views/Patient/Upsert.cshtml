@model HMSPortal.Application.ViewModels.AddPatientViewModel
<div class="row no-margin-padding">
	<div class="col-md-6">
		<h3 class="block-title">Add Patient</h3>
	</div>
	<div class="col-md-6">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="index.html">
					<span class="ti-home"></span>
				</a>
			</li>
			<li class="breadcrumb-item">Patients</li>
			@* <li class="breadcrumb-item active">Add Patient2</li> *@
		</ol>
	</div>
</div>
<!-- /Page Title -->
<!-- /Breadcrumb -->
<!-- Main Content -->
<div class="container-fluid">
    Patient
	<div class="row">
		<!-- Widget Item -->
		<div class="col-md-12">
			<divclass ="card-body p-4" @* class="widget-area-2 proclinic-box-shadow" *@>
				<h3 class="widget-title">Add Patient3</h3>
				<form method="post" class="row" enctype="multipart/form-data">
 					<input asp-for="Patient.Id" hidden/>
 				<input asp-for="Patient.ImageUrl" hidden/>
					@* <div asp-validation-summary="All" class="text-danger"></div> *@
					<div class="form-row">

						<div class="form-group col-md-6">
							<label asp-for="Patient.FirstName">Patient First Name</label>
							<input asp-for="Patient.FirstName" class="form-control" placeholder="First name">
							<span asp-validation-for="Patient.FirstName" class="text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="Patient.LastName">Patient Last Name</label>
							<input asp-for="Patient.LastName" class="form-control" placeholder="Last name">
							<span asp-validation-for="Patient.LastName" class="text-danger"></span>
						</div>

						<div class="form-group col-md-6">
							<label asp-for="Patient.DateOfBirth">Date Of Birth</label>
							<input asp-for="Patient.DateOfBirth" placeholder="Date of Birth" class="form-control">
							<span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
						</div>
						
						<div class="form-group col-md-6">
							<label asp-for="Patient.Phone">Phone</label>
							<input asp-for="Patient.Phone" class="form-control" placeholder="Phone">
							<span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="Patient.Email">Email</label>
							<input asp-for="Patient.Email" class="form-control" placeholder="email">
							<span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="Patient.Gender">Gender</label>
							<select class="form-control">
								<option>Male</option>
								<option>Female</option>
								<option>Other</option>
							</select>
						</div>
						<div class="form-group col-md-12">
							<label asp-for="Patient.Address">Address</label>
							<textarea asp-for="Patient.Address" placeholder="Address" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
						</div>
						<div class="form-group col-md-12">
							<label asp-for="Patient.ImageUrl">File</label>
							<input type="file" name="file" class="form-control border-0 shadow">
						</div>

						 
						
						<div class="form-check col-md-12 mb-2">
							<div class="text-left">
								<div class="custom-control custom-checkbox">
									<input class="custom-control-input" type="checkbox" id="ex-check-2">
									<label class="custom-control-label" for="ex-check-2">Please Confirm</label>
								</div>
							</div>
						</div>
						<div class="form-group col-md-6 mb-3">
							<button type="submit" class="btn btn-primary btn-lg">Submit</button>
						</div>
					</div>
				</form>
				<!-- Alerts-->
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>Successfully Done!</strong> Please add payment now
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<strong>Holy guacamole!</strong> You should check in on some of those fields below.
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<!-- /Alerts-->
			</divclass>
		</div>
		<!-- /Widget Item -->
	</div>
</div>