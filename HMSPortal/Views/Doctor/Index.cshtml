@model HMSPortal.Application.ViewModels.Doctor.GetAllDoctorsViewModel
@{
    ViewData["Title"] = "All Doctors";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>



<div class="card shadow border-0 my-4">


    <div class="card-body p-4">
        <div action="container">
            <div class="row pt-4">

                <div class="col-12 text-end mb-4">
                    <a asp-controller="Doctor" asp-action="Add" class="btn btn-primary mb-2">
                        <i class="bi bi-plus-circle"></i> Create New

                    </a>
                </div>
            </div>
            <table id="tblTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Phone
                        </th>

                        <th>
                            Doctor Id
                        </th>

                        <th>
                            Gender
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.Doctors)
                    {
                        <tr>
                            <td>@obj.FirstName</td>
                            <td>@obj.LastName</td>
                            <td>@obj.Phone</td>
                            <td>@obj.DoctorCode</td>
                            <td>@obj.Gender</td>

                            <td class="w-75 btn-group" role="group">
                                <a asp-controller="Doctor" asp-action="Detail" asp-route-Id="@obj.Id" class="btn btn-secondary">
                                    View
                                </a>
                                <br />

                                <button type="button" class="btn btn-danger mx-2" onclick="confirmDelete('@obj.Id')">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>

</div>

@section Scripts {

    <script src="~/hmsproj-js/doctor.js"></script>

}


