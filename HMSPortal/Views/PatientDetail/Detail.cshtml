@model List<HMSPortal.Domain.Models.Patient>

<div class="card shadow border-0 my-4">
    @*  <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
    <div class="col-12 text-center">
    <h2 class="text-white py-2">Product List</h2>
    </div>
    </div>
    </div> *@

    <div class="card-body p-4">
        <div action="container">
            <div class="row pt-4">

                @* <div class="col-12 text-end mb-4">
                <a asp-controller="Patient" asp-action="Create" class="btn btn-primary mb-2">
                <i class="bi bi-plus-circle"></i> Patient Details

                </a>
                </div> *@
            </div>
            <table id="tblTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Phone
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Date Of Birth
                        </th>

                        <th>
                            Gender
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.FirstName</td>
                            <td>@obj.LastName</td>
                            <td>@obj.Phone</td>
                            <td>@obj.Address</td>
                            <td>@obj.DateOfBirth</td>
                            <td>@obj.Gender</td>

                            <td class="w-75 btn-group" role="group">
                                <a asp-controller="Patient" asp-action="Detial" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Patient" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill "></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/patient-js/patient.js"></script>
}



