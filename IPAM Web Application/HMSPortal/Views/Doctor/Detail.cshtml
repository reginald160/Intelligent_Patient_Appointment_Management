@model HMSPortal.Application.ViewModels.Doctor.GetDoctorViewModel
@{
    ViewData["Title"] = "Personal Detail";
    var imageUrl = string.IsNullOrEmpty(Model.ImageUrl) ? "images/doctor.jpg" : Model.ImageUrl;
    var years = Model.YearsOfExperience > 1 ? "Years" : "Year";
    var successMessage = TempData["Success"] as string;
}

<!-- Main Content -->
<div class="container-fluid">

    <div class="row">
        <!-- Widget Item -->
        <div class="col-md-12">
            <div class="widget-area-2 proclinic-box-shadow">
                <h3 class="widget-title">Doctor Details</h3>
                @if (!string.IsNullOrEmpty(successMessage))
                {

                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <strong>@successMessage</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                }
                <div class="row no-mp">
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img class="card-img-top" src="@Model.ImageUrl" alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title">Dr @Model.FirstName @Model.LastName</h4>
                                <p class="card-text">
                                    @Model.DoctorDetails
                                 
                                </p>
                                <a asp-action="Edit" asp-controller="Doctor" asp-route-id ="@Model.Id" class="btn btn-success mb-2">
                                    <span class="ti-pencil-alt"></span> Edit
                                    Doctor
                                </a>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <td><strong>Doctor Id</strong></td>
                                        <td>@Model.DoctorCode</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Specialization</strong></td>
                                        <td>@Model.Specialty</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Experience</strong></td>
                                        <td>@Model.YearsOfExperience @years</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Gender</strong></td>
                                        <td>@Model.Gender</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Address</strong></td>
                                        <td>
                                            @Model.Address
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone</strong> </td>
                                        <td>@Model.Phone</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date Of Birth</strong> </td>
                                        <td>@Model.DateOfBirth.ToString("dd/mm/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email</strong></td>
                                        <td>@Model.Email</td>
                                    </tr>
                                </tbody>
                            </table>
